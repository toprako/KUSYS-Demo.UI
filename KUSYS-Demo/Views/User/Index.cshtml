@using KUSYS_Demo.ViewModels.User;
@model List<UserListViewModel>;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int counter = 0;
}

<h1>User List</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Student Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        counter++;
        <tr>
            <td>@counter</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>@item.StudentName</td>
            <td><a href="/User/DeleteUser/@item.Id" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/User/EditUser/@item.Id" class="btn btn-outline-success">Update</a></td>
        </tr>
    }
</table>

<a href="/User/AddUser" class="btn btn-outline-info">New User Registration</a>
